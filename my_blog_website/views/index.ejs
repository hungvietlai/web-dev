<%- include("partials/header.ejs") %>

<link rel="stylesheet" href="/styles.css">

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <% if (posts.length > 0) { %>
        <% posts.forEach(post => { %>
          <div class="card mt-4" style="background-color:rgb(255, 251, 251);">
            <div class="card-body d-flex justify-content-center m-0">
              <h5 class="card-title">
                <a href="<%= encodeURIComponent(post.title) %>" class="text-primary"><%= post.title %></a>
              </h5>
            </div>
            <div class="d-flex justify-content-center mb-1">
              <a href="/edit/<%= encodeURIComponent(post.title) %>" class="btn btn-warning flex-grow-1">Edit</a>
              <a href="/delete/<%= encodeURIComponent(post.title) %>" class="btn btn-danger flex-grow-1">Delete</a>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <p>No posts yet.</p>
      <% } %>
    </div>

    <div class="col-md-6 mt-4 mb-4 p-4 form-container" >
      <form action="/create-post" method="POST">
        <div class="mb-3">
          <label for="postTitle" class="form-label">Post Title</label>
          <input type="text" class="form-control" id="postTitle" name="title" required>
        </div>
        <div class="mb-3">
          <label for="postContent" class="form-label">Post Content</label>
          <textarea class="form-control" id="postContent" name="content" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create Post</button>
      </form>
    </div>
  </div>
</div>

<%- include("partials/footer.ejs") %>
